generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model compras {
  id_compra  Int     @id @default(autoincrement())
  nome_item  String  @db.VarChar(30)
  preco      Int
  usuario_id Int
  usuario    usuario @relation(fields: [usuario_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model usuario {
  id           Int       @id @default(autoincrement())
  nome_usuario String    @db.VarChar(30)
  email        String    @db.VarChar(30)
  senha        String
  compras      compras[]
}
